# aprsc Docker Environment Variables
# Copy this file to .env and customize as needed

# ============================================================
# Server Identification
# ============================================================
# Your amateur radio callsign (REQUIRED for production use)
APRSC_SERVER_ID=NOCALL

# Server passcode (get from https://apps.magicbug.co.uk/passcode/)
# Use -1 for read-only mode
APRSC_PASSCODE=-1

# Administrator information
APRSC_MY_ADMIN=Docker User
APRSC_MY_EMAIL=root@localhost

# ============================================================
# Directories
# ============================================================
APRSC_RUN_DIR=/var/run/aprsc

# ============================================================
# Log Configuration
# ============================================================
# Log rotation: "megabytes filecount"
# Keeps 5 old files of 10 megabytes each
APRSC_LOG_ROTATE=10 5

# ============================================================
# Timeouts
# ============================================================
# When no data is received from upstream in N seconds, switch server
APRSC_UPSTREAM_TIMEOUT=15s

# When no data is received from downstream in N seconds, disconnect
APRSC_CLIENT_TIMEOUT=48h

# ============================================================
# Resource Limits
# ============================================================
APRSC_MAX_CLIENTS=500
APRSC_FILE_LIMIT=10000

# ============================================================
# Listeners
# ============================================================
# Enable/disable listeners (yes/no)
APRSC_ENABLE_FULL_FEED=yes
APRSC_FULL_FEED_PORT=10152

APRSC_ENABLE_IGATE=yes
APRSC_IGATE_PORT=14580

APRSC_ENABLE_UDP_SUBMIT=yes
APRSC_UDP_SUBMIT_PORT=8080

# ============================================================
# HTTP Configuration
# ============================================================
# HTTP status monitoring page
APRSC_HTTP_STATUS_PORT=14501

# HTTP position upload
APRSC_HTTP_UPLOAD_PORT=8080

# ============================================================
# Uplink Configuration
# ============================================================
# Connect to upstream APRS-IS server (yes/no)
APRSC_UPLINK_ENABLED=no

# Upstream server address
APRSC_UPLINK_SERVER=rotate.aprs2.net

# Upstream server port
APRSC_UPLINK_PORT=10152

# Uplink type: full, ro (read-only)
APRSC_UPLINK_TYPE=full
